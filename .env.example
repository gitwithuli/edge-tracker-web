# ===========================================
# Edge Tracker Web - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to git!

# -----------------
# Supabase (Required)
# -----------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------
# App URL (Required)
# -----------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------
# Stripe (Required for payments)
# -----------------
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...
# Create products/prices in Stripe Dashboard
STRIPE_PRICE_ID=price_...
STRIPE_PROMO_PRICE_ID=price_...

# -----------------
# Email (Required for notifications)
# -----------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# -----------------
# Optional: Auto Backup (CRON)
# -----------------
# Email of the user to backup (for scheduled backups)
BACKUP_USER_EMAIL=
# Secret token for CRON endpoint authentication
CRON_SECRET=

# -----------------
# Optional: Market Data
# -----------------
# Get from: https://finnhub.io/dashboard
FINNHUB_API_KEY=

# -----------------
# Optional: AI Chart Parsing (pick one)
# -----------------
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=
