# ===========================================
# Edge Tracker Web - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to git!

# -----------------
# Supabase (Required)
# -----------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------
# App URL (Required)
# -----------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------
# NOWPayments (Required for crypto payments)
# -----------------
# Get from: https://account.nowpayments.io/settings
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=

# -----------------
# Email (Required for notifications)
# -----------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# -----------------
# Optional: Auto Backup (CRON)
# -----------------
# Email of the user to backup (for scheduled backups)
BACKUP_USER_EMAIL=
# Secret token for CRON endpoint authentication
CRON_SECRET=
# -----------------
# Optional: Market Data
# -----------------
# Get from: https://finnhub.io/dashboard
FINNHUB_API_KEY=

# -----------------
# Optional: AI Chart Parsing (pick one)
# -----------------
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=
